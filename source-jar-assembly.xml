<assembly
		xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">

	<id>sources</id>

	<formats>
		<format>jar</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/java9</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
			<outputDirectory />
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
			<outputDirectory />
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/kotlin</directory>
			<includes>
				<include>**/*.kt</include>
			</includes>
			<outputDirectory />
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory />
		</fileSet>
	</fileSets>

</assembly>
